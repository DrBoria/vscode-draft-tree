{
	"name": "tab-group",
	"displayName": "Tab Group",
	"description": "Edge's vertical Tab Group in VSCode",
	"publisher": "jiapeiyao",
	"version": "1.0.0",
	"license": "MIT",
	"contributors": [
		{
			"name": "Jiapei Yao",
			"email": "charlesyjp@gmail.com"
		},
		{
			"name": "Bill Goo",
			"email": "billgoo0813@gmail.com"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/billgoo/vscode-tab-group"
	},
	"bugs": {
		"url": "https://github.com/billgoo/vscode-tab-group/issues"
	},
	"icon": "media/icon.png",
	"engines": {
		"vscode": "^1.71.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "tabs",
					"title": "Tab Group",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"tabs": [
				{
					"id": "tabsTreeView",
					"name": "Tabs",
					"icon": "media/icon.svg",
					"contextualTitle": "Tabs"
				}
			],
			"explorer": [
				{
					"id": "tabsTreeViewInExplorer",
					"name": "Tabs",
					"contextualTitle": "Tabs",
					"visibility": "visible",
					"size": 600
				}
			]
		},
		"commands": [
			{
				"command": "tabsTreeView.tab.close",
				"title": "Close",
				"icon": "$(close)"
			},
			{
				"command": "tabsTreeView.tab.ungroup",
				"title": "Ungroup",
				"icon": "$(array)"
			},
			{
				"command": "tabsTreeView.UngroupAll",
				"title": "Ungroup All",
				"icon": "$(clear-all)"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "tabsTreeView.tab.ungroup",
					"when": "view == tabsTreeView && viewItem == 'grouped-tab' || view == tabsTreeViewInExplorer && viewItem == 'grouped-tab'",
					"group": "inline@0"
				},
				{
					"command": "tabsTreeView.tab.close",
					"when": "view == tabsTreeView && viewItem =~ /tab/ || view == tabsTreeViewInExplorer && viewItem =~ /tab/",
					"group": "inline@1"
				}
			],
			"view/title": [
				{
					"command": "tabsTreeView.UngroupAll",
					"when": "view == tabsTreeView || view == tabsTreeViewInExplorer",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "jest"
	},
	"devDependencies": {
		"@types/jest": "^29.1.2",
		"@types/node": "^18.7.15",
		"@types/vscode": "^1.71.0",
		"jest": "^29.1.2",
		"ts-jest": "^29.0.3",
		"typescript": "^4.8.2"
	}
}
