{
	"name": "vscode-draft-tree",
	"displayName": "Draft Tree",
	"description": "Add possibility to make drafts in your VSCode exploder view",
	"publisher": "drboria",
	"version": "0.0.2",
	"license": "MIT",
	"contributors": [
		{
			"name": "Bill Goo",
			"email": "billgoo0813@gmail.com"
		},
		{
			"name": "Jiapei Yao",
			"email": "charlesyjp@gmail.com"
		},
		{
			"name": "Bill Goo",
			"email": "billgoo0813@gmail.com"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/DrBoria/vscode-draft-tree"
	},
	"bugs": {
		"url": "https://github.com/DrBoria/vscode-draft-tree/issues"
	},
	"categories": [
		"Other"
	],
	"icon": "media/icon.png",
	"engines": {
		"vscode": "^1.71.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "tabsTreeOpenView",
					"name": "Draft Tree",
					"icon": "media/icon.svg",
					"contextualTitle": "Tabs"
				}
			]
		},
		"commands": [
			{
				"command": "explorer.addToOpen",
				"title": "+ Add to Open"
			},
			{
				"command": "tabsTreeOpenView.rename",
				"title": "Rename",
				"icon": "$(edit)"
			},
			{
				"command": "tabsTreeOpenView.close",
				"title": "Close",
				"icon": "$(close)"
			},
			{
				"command": "tabsTreeOpenView.newFolder",
				"title": "Save to Workspace",
				"icon": "$(new-folder)"
			},
			{
				"command": "tabsTreeOpenView.filter",
				"title": "Filter",
				"icon": "$(search)"
			},
			{
				"command": "tabsTreeOpenView.expandAll",
				"title": "Filter",
				"icon": "$(expand-all)"
			},
			{
				"command": "tabsTreeOpenView.collapseAll",
				"title": "Filter",
				"icon": "$(collapse-all)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "explorer.addToOpen",
					"group": "explorer@10"
				}
			],
			"view/item/context": [
				{
					"command": "tabsTreeOpenView.rename",
					"when": "view == tabsTreeOpenView",
					"group": "tabsTreeOpenView@0"
				},
				{
					"command": "tabsTreeOpenView.close",
					"when": "view == tabsTreeOpenView",
					"group": "tabsTreeOpenView@0"
				}
			],
			"view/title": [
				{
					"command": "tabsTreeOpenView.newFolder",
					"when": "view == tabsTreeOpenView",
					"group": "navigation@1"
				},
				{
					"command": "tabsTreeOpenView.filter",
					"when": "view == tabsTreeOpenView",
					"group": "navigation@2"
				},
				{
					"command": "tabsTreeOpenView.expandAll",
					"when": "view == tabsTreeOpenView",
					"group": "navigation@3"
				},
				{
					"command": "tabsTreeOpenView.collapseAll",
					"when": "view == tabsTreeOpenView",
					"group": "navigation@4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./ --sourceMap false",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "jest"
	},
	"devDependencies": {
		"@types/jest": "^29.1.2",
		"@types/node": "^18.7.15",
		"@types/vscode": "^1.71.0",
		"jest": "^29.1.2",
		"ts-jest": "^29.0.3",
		"typescript": "^4.8.2"
	}
}
